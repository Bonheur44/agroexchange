{% extends 'headerProducer.html.twig' %}

{% block title %}AgroExchange - Ajouter un produit{% endblock %}

{% block body %}

    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Catégories</span>
                        </div>
                        <ul>
                            {% if categories %}
                                {% for cat in categories %}
                                    <li><a href="#">{{cat.name}}</a></li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form action="#">
                                <!-- <div class="hero__search__categories">
                                    All Categories
                                    <span class="arrow_carrot-down"></span>
                                </div> -->
                                <input type="text" placeholder="Rechercher ...">
                                <button type="submit" class="site-btn">
                                    <span class="icon_search">
                                </button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+229 00.00.00.00</h5>
                                <span>24h/24 et 7j/7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg={{ asset('img/breadcrumb.jpg') }}>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>AgroExchange</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Contact Form Begin -->
    <div class="contact-form spad">
        <div class="container">
            <!-- <div class="row">
                <div class="col-lg-12">
                    <div class="contact__form__title">
                        <h2>Leave Message</h2>
                    </div>
                </div>
            </div> -->
            <form class="addProduct" enctype="multipart/form-data">
                <div class="row">
                <div class="col-12 mb-4">
                    <div class="alert"></div>
                    <div class="err"></div>
                </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 mt-2">
                        <input type="text" id="name" placeholder="Nom">
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <select id="cat">
                            <option value="">Catégorie</option>
                            {% if categories %}
                                {% for cat in categories %}
                                    <option value="{{cat.id}}">{{cat.name}}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                        <p class="err" style="margin-top: 0"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <input type="number" id="price" placeholder="Prix unitaire (en FCFA)">
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <select id="unit">
                            <option value="">Unité de mesure</option>
                            {% if units %}
                                {% for unit in units %}
                                    <option value="{{unit}}">{{unit}}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                        <p class="err" style="margin-top: -1em"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <input type="number" id="quantity" placeholder="Quantité disponible (par unité de mesure)">
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <input type="file" class="form-control" id="image" placeholder="Image">
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-12 text-center">
                        <button type="submit" id="addProduct" class="site-btn mt-3"><div class="lds-dual-ring"></div> Ajouter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Contact Form End -->

{% endblock %}

{% block additionnal_javascripts %}
    <script src={{ asset('js/producer.js') }}></script>
{% endblock %}