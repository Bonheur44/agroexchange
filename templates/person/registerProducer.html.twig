{% extends 'base.html.twig' %}

{% block title %}AgroExchange - Inscription Producteur{% endblock %}

{% block body %}

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>INSCRIPTION</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Contact Form Begin -->
    <div class="contact-form spad">
        <div class="container">
            <!-- <div class="row">
                <div class="col-lg-12">
                    <div class="contact__form__title">
                        <h2>Leave Message</h2>
                    </div>
                </div>
            </div> -->
            <form class="registerProducer" name="/producer/products">
                <div class="row">
                <div class="col-12 mb-4">
                    <div class="alert"></div>
                    <div class="err"></div>
                </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 mt-2">
                        <input type="text" id="name" placeholder="Nom complet">
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <input type="email" id="email" placeholder="Adresse email">
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <div class="d-flex">
                            <input type="password" id="pass" placeholder="Mot de passe">
                            <i class="fa fa-eye see"></i>
                        </div>
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <div class="d-flex">
                            <input type="password" id="confirm" placeholder="Confirmer le mot de passe">
                            <i class="fa fa-eye see"></i>
                        </div>
                        <p class="err"></p>
                    </div>
                    <div class="col-lg-12 text-center">
                        <button type="submit" id="registerProducer" class="site-btn"><div class="lds-dual-ring"></div> S'inscrire</button>
                    </div>
                </div>
            </form>
            <div class="text-center mt-4">
                <p>Avez-vous un compte ? <a href="{{ path('login') }}">Connectez-vous</a></p>
            </div>
        </div>
    </div>
    <!-- Contact Form End -->
{% endblock %}

{% block additionnal_javascripts %}
    <script src={{ asset('js/login.js') }}></script>
{% endblock %}